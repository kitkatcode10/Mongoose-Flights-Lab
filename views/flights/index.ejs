<%- include('../partials/header') %>

  <title>Mongoose Flights</title>
</head>
<body>
  <h1>All Flights</h1>
  <table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th>Departure</th>
        <th>Destination</th>
      </tr>
    </thead>

  <tbody>
      <% flights.forEach(function(f){ %>  
        <tr>
          <td><%= f.airline %>
          </td>
          <td><%= f.airport %>
          </td>
          <td><%= f.flightNo %>
          </td>
          <td><%= f.departs %>
          </td>
          <td><a href="/flights/<%= f._id %>">Details</a>
          </td>
          </tr>
        <% }); %>
    </tbody>
  </table>
  </body>
</head> 

  <%- include('../partials/footer') %>